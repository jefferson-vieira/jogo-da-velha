{
  "env": {
    "browser": true,
    "jest": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "react-app", "prettier", "prettier/react"],
  "plugins": ["babel", "import", "jsx-a11y", "prettier", "react"],
  "rules": {
    "prettier/prettier": "error",
    "no-plusplus": "warn",
    "consistent-return": "warn",
    "react/no-array-index-key": "warn",
    "react/prop-types": "off"
  },
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src"]
      }
    }
  }
}
